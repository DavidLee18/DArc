exe=Tests/arc
for option; do if [[ $option == -DFREEARC_GUI ]]; then exe=Tests/freearc; fi; done
ctempdir=/tmp/out/FreeArc
tempdir=$ctempdir$1$2$3
mkdir -p $tempdir
mkdir -p $ctempdir
if [ "$(getconf LONG_BIT 2>/dev/null)" = "64" ]; then
  bit64="-DFREEARC_64BIT -optc-DFREEARC_64BIT"
else
  bit64=""
fi
defines="-DFREEARC_PACKED_STRINGS -DFREEARC_UNIX -DFREEARC_INTEL_BYTE_ORDER -optc-DFREEARC_UNIX -optc-DFREEARC_INTEL_BYTE_ORDER $bit64"
# ******** -DFREEARC_WIN -DFREEARC_MOTOROLA_BYTE_ORDER -DFREEARC_ONLY_ALIGNED_ACCESS *******
cp unix-common.mak common.mak
cd Compression
chmod +x compile
./compile
cd ..
make
lua_libs=$(pkg-config --libs lua5.1 2>/dev/null || echo "-llua5.1")
gcc -c HsLua/src/ntrljmp.c -IHsLua/src $(pkg-config --cflags lua5.1 2>/dev/null) -o $ctempdir/ntrljmp.o
rm $exe
c_modules="$ctempdir/Environment.o $ctempdir/URL.o $ctempdir/Common.o $ctempdir/CompressionLibrary.o $ctempdir/C_PPMD.o $ctempdir/C_LZP.o $ctempdir/C_LZMA.o $ctempdir/C_BCJ.o $ctempdir/C_GRZip.o $ctempdir/C_Dict.o $ctempdir/C_REP.o $ctempdir/C_MM.o $ctempdir/C_TTA.o $ctempdir/C_Tornado.o $ctempdir/C_Delta.o $ctempdir/C_External.o $ctempdir/C_Encryption.o $ctempdir/ntrljmp.o -optl-s -lstdc++ -lncurses -lcurl $lua_libs"
for option; do if [[ $option == -DFREEARC_GUI ]]; then c_modules="$c_modules $ctempdir/GuiEnvironment.o"; fi; done
options="-iCompression -iHsLua/src -threaded -XGHC2024 -XNoMonomorphismRestriction -XNoMonoLocalBinds -XUndecidableInstances -XFunctionalDependencies -XNondecreasingIndentation -XRecursiveDo -XBlockArguments -package old-time -package old-locale -package array -package process -package directory -package unix -package containers"
ghc_rts_options="+RTS -A2m"
ghc --make $* Arc.hs $options $defines $c_modules -odir $tempdir -hidir $tempdir -o $exe $ghc_rts_options
rm Compression/CompressionLib_stub.?
